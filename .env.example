# Jesse A. Eisenbalm Automation - Environment Variables
# Copy this to .env and fill in your values

# ============== REQUIRED ==============

# OpenAI API Key (for content generation)
OPENAI_API_KEY=sk-your-openai-key-here

# Google API Key (for Gemini image generation)
GOOGLE_API_KEY=your-google-api-key-here

# ============== LINKEDIN (Optional) ==============

# LinkedIn OAuth Access Token
# Get this by running OAuth flow or from LinkedIn Developer Portal
LINKEDIN_ACCESS_TOKEN=

# LinkedIn App Credentials (for OAuth flow)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============== SERVER CONFIG ==============

# API Port
PORT=8001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============== AUTOMATION ==============

# Auto-start scheduler on API startup
AUTO_START_SCHEDULER=false

# Default posting time
DEFAULT_POST_HOUR=9
DEFAULT_POST_MINUTE=0
DEFAULT_TIMEZONE=America/New_York

# ============== DEVELOPMENT ==============

# Use mock LinkedIn poster (no actual posting)
MOCK_LINKEDIN=true

# Environment
ENVIRONMENT=development

# Logging level
LOG_LEVEL=INFO
