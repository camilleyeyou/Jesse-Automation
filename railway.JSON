{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd api && python -m uvicorn main:app --host 0.0.0.0 --port $PORT --timeout-keep-alive 120",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  }
}